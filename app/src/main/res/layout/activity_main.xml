<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.week1day3hwhuaman.MainActivity"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/displayView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:maxLines="4"
        android:textSize="100sp"/>


    <LinearLayout
        android:id="@+id/calcLine0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/calcLine1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/signPosNeg"
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_weight="1"
            android:text="-/+"
            android:onClick="updateDisplayView"
            android:textSize="30sp"
            />
        <Button
            android:id="@+id/signPercentage"
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_weight="1"
            android:text="%"
            android:onClick="updateDisplayView"
            android:textSize="30sp"
            />
        </LinearLayout>
    <LinearLayout
        android:id="@+id/calcLine1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/calcLine2"
        >

        <Button
            android:id="@+id/num7"
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_below="@+id/calculatorButtons"
            android:layout_weight="1"
            android:text="7"
            android:onClick="updateDisplayView"
            android:textSize="30sp"
            />

        <Button
            android:id="@+id/num8"
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_below="@+id/displayView"
            android:layout_toRightOf="@+id/num7"
            android:layout_weight="1"
            android:text="8"
            android:onClick="updateDisplayView"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/num9"
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_below="@+id/displayView"
            android:layout_toRightOf="@+id/num8"
            android:layout_weight="1"
            android:text="9"
            android:onClick="updateDisplayView"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/signDivision"
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_below="@+id/displayView"
            android:layout_toRightOf="@+id/num9"
            android:layout_weight="1"
            android:text="/"
            android:onClick="updateDisplayView"
            android:textSize="30sp"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/calcLine2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/calcLine3">

        <Button
            android:id="@+id/num4"
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_below="@+id/num4"
            android:layout_weight="1"
            android:text="4"
            android:onClick="updateDisplayView"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/num5"
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_toRightOf="@+id/num4"
            android:layout_weight="1"

            android:text="5"
            android:onClick="updateDisplayView"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/num6"
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_toRightOf="@+id/num5"
            android:layout_weight="1"
            android:text="6"
            android:onClick="updateDisplayView"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/signMultiplication"
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_below="@+id/displayView"
            android:layout_toRightOf="@+id/num9"
            android:layout_weight="1"
            android:text="X"
            android:onClick="updateDisplayView"
            android:textSize="30sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/calcLine3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/calcLine4">

        <Button
            android:id="@+id/num1"

            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_below="@+id/num4"
            android:layout_weight="1"
            android:text="1"
            android:onClick="updateDisplayView"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/num2"
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_toRightOf="@+id/num4"
            android:layout_weight="1"

            android:text="2"
            android:onClick="updateDisplayView"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/num3"
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_toRightOf="@+id/num5"
            android:layout_weight="1"
            android:text="3"
            android:onClick="updateDisplayView"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/signAddition"
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_below="@+id/displayView"
            android:layout_toRightOf="@+id/num9"
            android:layout_weight="1"
            android:text="+"
            android:onClick="updateDisplayView"
            android:textSize="30sp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/calcLine4"
        android:layout_above="@+id/calcLine5">

        <Button
            android:id="@+id/decimal"

            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_below="@+id/num4"
            android:layout_weight="1"
            android:text="."
            android:onClick="updateDisplayView"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/num0"
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_toRightOf="@+id/num4"
            android:layout_weight="1"
            android:text="0"
            android:onClick="updateDisplayView"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/Clear"
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_toRightOf="@+id/num5"
            android:layout_weight="1"
            android:text="C"
            android:onClick="updateDisplayView"
            android:textSize="30sp"/>

        <Button
            android:id="@+id/signSubtraction"
            android:layout_width="wrap_content"
            android:layout_height="80sp"
            android:layout_below="@+id/displayView"
            android:layout_toRightOf="@+id/num9"
            android:layout_weight="1"
            android:text="-"
            android:onClick="updateDisplayView"
            android:textSize="30sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/calcLine5"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:id="@+id/signEquals"
            android:text="="
            android:onClick="updateDisplayView"
            android:textSize="30sp"/>
    </LinearLayout>

</RelativeLayout>
